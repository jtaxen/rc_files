setxkbmap -layout us

if [ -n "$(xrandr | ack DVI-I-1-1)" ]; then
    xrandr --output DVI-I-1-1 --auto --right-of eDP-1
fi

if [ -n "$(xrandr | ack DVI-I-2-2)" ]; then
    xrandr --output DVI-I-2-2 --auto --right-of DVI-I-1-1
fi

feh --bg-scale $HOME/Pictures/Alopex_lagopus_IMG_9019.JPG &

